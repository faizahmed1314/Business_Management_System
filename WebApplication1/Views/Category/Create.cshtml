@model WebApplication1.Models.ViewModels.Category.CategoryCreateVm

@{
    ViewBag.Title = "Create";
}
<br />
<br />
<br />
<div style="font-family: arial">



    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal row">
            <div class="col-md-12">
                <h2 class="text-info">Create Category</h2>
                <hr />
            </div>
            <div class="col-md-6">
                @Html.ValidationSummary(true)

                <div class="form-group">
                    @Html.LabelFor(model => model.Name, new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(model => model.Name, null, new { @class = "form-control", placeholder = "name" })
                        @Html.ValidationMessageFor(model => model.Name, null, new { @class = "text-danger" })
                        <span id="NameSpan" class="text-danger"></span>

                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Code, new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(model => model.Code, null, new { @class = "form-control", placeholder = "code" })
                        @Html.ValidationMessageFor(model => model.Code, null, new { @class = "text-danger" })
                        <span id="CodeSpan" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-4 col-md-8">
                        <input type="submit" value="Create" class="btn btn-success" />
                        <span id="ButtonSpan"></span>
                    </div>

                </div>
            </div>
        </div>
    }

    <div>
        <h3>
            @Html.ActionLink("Back to List", "Index")
        </h3>
    </div>
</div>

@section scripts{
    <script src="~/Scripts/ProjectScripts/Category/textBoxValidation.js"></script>

}