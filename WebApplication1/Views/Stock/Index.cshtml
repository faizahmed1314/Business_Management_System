@model IEnumerable<WebApplication1.Models.PurchaseDetails>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div>
    <h1 class="text-info">Stock Details</h1>
</div>
<hr />
<form class="form-inline" method="post">
    <div class="form-group col-md-5">
        <label class="col-md-2">Category</label>
        <div class="col-md-4">
            <input type="text" class="form-control" name="category">
        </div>
    </div>
    <div class="form-group col-md-5">
        <label class="col-md-2">Product</label>
        <div class="col-md-4">
            <input type="text" class="form-control" name="product">
        </div>
    </div>
    <div class="form-group col-md-2">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>
<br />
<hr />
<div>
    <table class="table table-striped table-bordered" id="myTable">
        <thead>
            <tr style="background-color: teal; color: white; font-weight: bold">
                <th>
                    @Html.DisplayNameFor(model => model.Product)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Product.Code)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Product.ReOrderLevel)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Product.Category)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Purchase.BillNo)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.ExpireDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Quantity)
                </th>



            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Product.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Product.Code)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Product.ReOrderLevel)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Product.Category.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Purchase.BillNo)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.ExpireDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>


                </tr>

            }
        </tbody>
    </table>
</div>

@section scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#myTable').DataTable({
                dom: 'Bfrtip',
                buttons: [
                    'copy', 'csv', 'excel', 'pdf', 'print'
                ]
            });
        });
    </script>
}