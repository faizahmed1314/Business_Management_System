@model WebApplication1.Models.Product

@{
    ViewBag.Title = "Edit";
}

<h2>Update</h2>


<div>
    <form method="POST" class="form-horizontal" enctype="multipart/form-data">
        @Html.HiddenFor(p => p.Id)
        <div class="form-group">
            <label class="col-sm-2 control-label">Code</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(p => p.Code, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">Name</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(p => p.Name, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">Category</label>
            <div class="col-sm-10">
                <select name="CategoryId" class="form-control" id="CategoryId"></select>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">Reorder Level</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(p => p.ReOrderLevel, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">Description</label>
            <div class="col-sm-10">
                @Html.TextAreaFor(p => p.Description, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">Image</label>
            <div class="col-sm-10">
                <input type="file" name="UploadFile">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-success">Update</button>
            </div>
        </div>
    </form>

</div>